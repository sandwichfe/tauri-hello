{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sandwich-littletool",
  "version": "0.1.0",
  "identifier": "y",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",  
        "url": "index.html",
        "title": "sandwich-little-tool",
        "width": 800,
        "height": 600,
        "visible": false 
      },
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "title": "Loading...",
        "width": 800,
        "height": 600,
        "decorations": false,
        "resizable": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
